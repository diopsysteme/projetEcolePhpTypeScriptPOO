{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./public/dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",    // Ajouté pour résoudre les modules comme 'jspdf'
    "baseUrl": "./src/src",            // Définir la base des chemins absolus
    "paths": {                     // Ajouter des chemins pour les modules
      "*": ["../node_modules/*"]
    }
  },
  "include": ["src/src"]
}
